@model IEnumerable<DardaniaRealEstate.Models.Properties>

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="top">
        <input type="text" id="myInput" onkeyup="myFunction()" placeholder="City" title="City">
    </div>
    <div style="margin:1%;">
        <a class="btn btn-outline-warning float-right ml-2" asp-action="Create">Create New</a>
    </div>
    <table class="table bg-light" id="myTable">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Price</th>
                <th scope="col">Square Meter</th>
                <th scope="col">City</th>
                <th scope="col">City</th>
                <th scope="col">Location</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

            <tr>
                <th scope="row"><img src="@Html.DisplayFor(modelItem => item.Photo)" width="100" height="100" /></th>
                <th scope="row"><img src="@Html.DisplayFor(modelItem => item.Sketch)" width="100" height="100" /></th>
                <td>@Html.DisplayFor(modelItem => item.Price) € / m²</td>
                <td>@Html.DisplayFor(modelItem => item.Squaremeters) m²</td>

                <td>@Html.DisplayFor(modelItem => item.Communes.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td><a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a> <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id">Delete</a></td>
            </tr>



            }


        </tbody>
    </table>
</div>

<script>
        function myFunction() {
            var input, filter, table, tr, td, i, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("myTable");
            tr = table.getElementsByTagName("tr");
            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[2];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
</script>