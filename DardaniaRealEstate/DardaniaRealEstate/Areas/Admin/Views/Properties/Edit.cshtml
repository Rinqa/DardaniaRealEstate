@model DardaniaRealEstate.Models.Properties

@{
    ViewData["Title"] = "Edit";
}

<div class="bg-light">
    <h4>Properties</h4>
    <hr />

    <form asp-action="Edit" style="margin:2%;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row">
            <div class="col-md">
                <div class="form-group">
                    <img src="@Html.DisplayFor(model => model.Photo)" height="300" width="100%" />
                </div>
                <div class="form-group">
                    <label asp-for="Photo" class="control-label"></label>
                    <input asp-for="Photo" class="form-control" />
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sketch" class="control-label"></label>
                    <input asp-for="Sketch" class="form-control" />
                    <span asp-validation-for="Sketch" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md ">
                <iframe src="@Html.DisplayFor(model => model.GoogleMapsLink)" height="300" width="100%" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
                <div class="form-group">
                    <label asp-for="GoogleMapsLink" class="control-label"></label>
                    <input asp-for="GoogleMapsLink" class="form-control" />
                    <span asp-validation-for="GoogleMapsLink" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CommunesID" class="control-label"></label>
                    <select asp-for="CommunesID" class="form-control" asp-items="ViewBag.CommunesID"></select>
                    <span asp-validation-for="CommunesID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AgentsID" class="control-label"></label>
                    <select asp-for="AgentsID" class="form-control" asp-items="ViewBag.AgentsID"></select>
                    <span asp-validation-for="AgentsID" class="text-danger"></span>
                </div>



            </div>
        </div>
        <div class="form-group" style="color:orange">
            <a asp-action="Index" class="btn btn-warning">Back</a>
            <input type="submit" value="Save" class="btn btn-primary float-right" />
        </div>
    </form>



</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
